<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="embedstock.com.br.embedstock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AutenticacaoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".TrocaSenhaActivity"
            android:label="@string/trocar_senha"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".EntradaProdutoActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/entrada_produto"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ConsultaEstoqueActivity"
            android:screenOrientation="sensorLandscape"
            android:label="@string/consulta_estoque"
            android:theme="@style/AppTheme">
        </activity>

    </application>

</manifest>